{
  "name": "@findify/findify-feedback",
  "version": "0.0.1",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf ./lib ./dist",
    "lint": "tslint --project .",
    "check": "npm run test && npm run build && npm run lint && npm run clean",
    "test": "mocha --compilers ts:ts-node/register --recursive -R min  ./__tests__",
    "build:commonjs": "tsc --project . && cpx './src/env/*.js' ./lib/env",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.ts dist/findify-feedback.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.ts dist/findify-feedback.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run build",
    "postpublish": "npm run clean",
    "preversion": "npm run check && git checkout master && git merge develop",
    "postversion": "git push && git push --tags && git checkout develop && git merge master && git push && npm publish"
  },
  "author": "1ven",
  "license": "ISC",
  "files": [
    "dist",
    "lib",
    "index.d.ts"
  ],
  "repository": "https://github.com/findify/findify-feedback.git",
  "dependencies": {
    "@types/mocha": "^2.2.37",
    "cpx": "^1.5.0",
    "cross-env": "^3.1.4",
    "expect": "^1.20.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "ts-loader": "^1.3.3",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}

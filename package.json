{
  "name": "findify-analytics",
  "version": "1.1.0",
  "main": "lib/index.js",
  "tags": [
    "findify",
    "analytics",
    "search"
  ],
  "scripts": {
    "clean": "rimraf ./lib ./dist",
    "lint": "tslint --project .",
    "check": "npm run test && npm run build && npm run lint && npm run clean",
    "test": "mocha --compilers ts:ts-node/register --recursive -R min  ./__tests__",
    "build:commonjs": "tsc --project . && cpx './src/env/*.js' ./lib/env",
    "build:umd": "cross-env NODE_ENV=development webpack src/index.ts dist/findify-analytics.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.ts dist/findify-analytics.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run build",
    "postpublish": "npm run clean",
    "preversion": "npm run check && git checkout master && git merge develop",
    "postversion": "git push && git push --tags && git checkout develop && git merge master && git push"
  },
  "author": "Findify <yourfriends@findify.io>",
  "license": "MIT",
  "files": [
    "dist",
    "lib",
    "index.d.ts"
  ],
  "repository": "https://github.com/findify/findify-analytics.git",
  "dependencies": {
    "@types/expect": "^1.20.0",
    "@types/js-cookie": "^2.0.28",
    "@types/jsdom": "^2.0.29",
    "@types/lodash": "4.14.30",
    "@types/mocha": "^2.2.37",
    "@types/qs": "^6.2.30",
    "canvas": "^1.6.2",
    "cpx": "^1.5.0",
    "cross-env": "^3.1.4",
    "expect": "^1.20.2",
    "faux-jax": "^5.0.6",
    "js-cookie": "^2.1.3",
    "jsdom": "^9.9.1",
    "lodash": "^4.17.4",
    "mocha": "^3.2.0",
    "qs": "^6.3.0",
    "rewire": "^2.5.2",
    "rimraf": "^2.5.4",
    "ts-loader": "^1.3.3",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}
